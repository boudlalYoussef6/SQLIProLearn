{% extends 'base.html.twig' %}
{% block body %}
    {% if last_error %}
        <div>{{ last_error.messageKey|trans(last_error.messageData, 'security') }}</div>
    {% endif %}
    <div class="login-box" style="position: absolute;left: 40%;top: 20%">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="" class="h1"><b>SQLI - </b>Pro Learn</a>
                <img src="{{ asset('images/logo.ico') }}" />
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form action="{{ path('app_security_login') }}" method="post">
                    <div class="input-group mb-3">
                        <input type="text" id="username" name="_username" value="{{ username }}" class="form-control"
                               placeholder="Email"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" id="password" name="_password" class="form-control"
                               placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock body %}
{% block stylesheets %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
<link rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.min.css') }}" />
<link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}" />
{% endblock stylesheets %}

