{% extends 'site.html.twig' %}

{% block title %}Cours{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <h2>list of Courses</h2>
            <div class="row" style="gap: 0.8rem;">
                {% for cours in courses %}
                    <div class="card" style="width: 25vw;">
                        <img class="card-img-top"
                             src="{{ asset(random(['images/php_Elephant.jpg', 'images/php_Elephant_V2.jpg', 'images/php_Elephant_V3.jpg'])) }}"
                             alt="image of the course"
                             style="height: 20vh; object-fit: cover;">
                        <div class="card-body">
                            <h3 class="card-title font-weight-bold">{{ cours.label }}</h3>
                            <p class="card-text">{{ cours.description|length > 50 ? cours.description|slice(0, 50) ~ '...' : cours.description  }}</p>
                            <a href="{{ url('app_cours_details', {'id': cours.id}) }}" class="btn btn-primary">More info</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block custum_js %}
    <script>
        // Fonction pour extraire les données du tableau
        function extractData() {
            // Sélection du tableau par son ID
            var table = document.getElementById("example");

            // Initialisation de la variable pour stocker les données extraites
            var data = [];

            // Boucle à travers chaque ligne du tableau
            for (var i = 1; i < table.rows.length; i++) {
                // Sélection de la ligne actuelle
                var row = table.rows[i];

                // Extraction des valeurs des colonnes "id", "label" et "description"
                var id = row.cells[0].innerText;
                var label = row.cells[1].innerText;
                var description = row.cells[2].innerText;

                // Création d'un objet contenant les valeurs extraites
                var rowData = {
                    id: id,
                    label: label,
                    description: description
                };

                // Ajout de l'objet à la liste des données
                data.push(rowData);
            }

            // Retourne les données extraites
            return data;
        }

        // Appel de la fonction d'extraction des données lors du chargement du document
        document.addEventListener("DOMContentLoaded", function () {
            var extractedData = extractData();
            console.log(extractedData);
            // Utilisez les données extraites comme vous le souhaitez ici
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.bootstrap5.js"></script>
    <script>
        new DataTable('#example');
    </script>
{% endblock %}
