{% extends 'site.html.twig' %}

{% block title %}Cours{% endblock %}


{% block content %}
    {% block custum_css %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.6/css/dataTables.bootstrap5.min.css">
    {% endblock %}

    <h1>Liste des cours</h1>
    <table id="example" class="display nowrap" style="width:100%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.label }}</td>
                <td>{{ course.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}




    {% block custum_js%}
        <script>
            // Fonction pour extraire les données du tableau
            function extractData() {
                // Sélection du tableau par son ID
                var table = document.getElementById("example");

                // Initialisation de la variable pour stocker les données extraites
                var data = [];

                // Boucle à travers chaque ligne du tableau
                for (var i = 1; i < table.rows.length; i++) {
                    // Sélection de la ligne actuelle
                    var row = table.rows[i];

                    // Extraction des valeurs des colonnes "id", "label" et "description"
                    var id = row.cells[0].innerText;
                    var label = row.cells[1].innerText;
                    var description = row.cells[2].innerText;

                    // Création d'un objet contenant les valeurs extraites
                    var rowData = {
                        id: id,
                        label: label,
                        description: description
                    };

                    // Ajout de l'objet à la liste des données
                    data.push(rowData);
                }

                // Retourne les données extraites
                return data;
            }

            // Appel de la fonction d'extraction des données lors du chargement du document
            document.addEventListener("DOMContentLoaded", function() {
                var extractedData = extractData();
                console.log(extractedData);
                // Utilisez les données extraites comme vous le souhaitez ici
            });
        </script>²
