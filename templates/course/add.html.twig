{% extends 'site.html.twig' %}

{% form_theme form _self %}

{% block title %}Create New Course{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <h1 class="card-title">Cr√©ation d'un nouveau cours</h1>
            <div class="card card-primary">
                {{ form_start(form,{'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <i class="menu-icon tf-icons bx bx-label"></i>
                                {{ form_row(form.label, {'attr': {'class': 'form-control', 'placeholder': 'Label'}}) }}
                            </div>
                            <div class="form-group">
                                <i class="menu-icon tf-icons bx bx-book-content"></i>
                                {{ form_row(form.description, {'attr': {'id': 'editor', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <i class="menu-icon tf-icons bx bx-category"></i>
                                {{ form_row(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Categories'}}) }}
                            </div>
                            <div class="form-group">
                                <i class="menu-icon tf-icons bx bx-video"></i>
                                {{ form_row(form.videoPath, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                <i class="menu-icon tf-icons bx bxs-file-import"></i></br>
                                <label for="formFileMultiple">Choisie un ou multiple fichiers</label>
                                <input class="form-control" type="file" id="formFileMultiple" multiple />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="menu-icon tf-icons bx bx-save"></i> Enregistrer
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}

{% block custom_js %}
    <script src="https://cdn.tiny.cloud/1/{{ key }}/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('controllers/upload_media.js') }}"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align left center right | bullist numlist | outdent indent',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            menubar: false,
            statusbar: false,
        });
    </script>
{% endblock %}
