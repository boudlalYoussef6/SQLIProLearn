{% extends 'site.html.twig' %}

{% block title %}{{ course.label }}{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <h2>{{ course.label }}</h2>
            <div class="row">
                <!-- Main course card -->
                <div class="col-md-9">
                    <div class="card d-flex">
                        {% if course.videoPathName is defined and course.videoPathName is not empty %}
                            <video width="100%" height="400" controls>
                                <source src="{{ generate_cloud_url(course.videoPathName) }}" type="video/mp4">
                                <source src="{{ generate_cloud_url(course.videoPathName) }}" type="video/webm">
                                <source src="{{ generate_cloud_url(course.videoPathName) }}" type="video/mpeg">
                                Your browser does not support the video tag.
                            </video>
                        {% else %}
                            {% set cover = (course.image_480x270 is defined and course.image_480x270 is not empty) ? course.image_480x270 : asset(random(['images/php_Elephant.jpg', 'images/php_Elephant_V2.jpg', 'images/php_Elephant_V3.jpg'])) %}
                            <img class="card-img-top" src="{{ cover }}" alt="image of the course" style="height: 270px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            {% if course.description %}
                                <p class="card-text">{{ course.description|raw }}</p>
                            {% endif %}
                            <button id="favorite-toggle" class="btn btn-secondary">
                                <i class="fas fa-star {% if isFavorite %}favorite{% else %}not-favorite{% endif %}"></i>
                            </button>
                            <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                                <span class="sr-only">Loading...</span>
                            </div>
                            {% if course.sections %}
                                <div class="accordion" id="accordionExample" style="margin-top: 1rem;">
                                    {% for section in course.sections %}
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading{{ loop.index }}">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#collapse{{ loop.index }}" aria-expanded="true"
                                                        aria-controls="collapse{{ loop.index }}">
                                                    <strong>{{ section.title }}</strong>
                                                </button>
                                            </h2>
                                            <div id="collapse{{ loop.index }}" class="accordion-collapse collapse"
                                                 aria-labelledby="heading{{ loop.index }}"
                                                 data-bs-parent="#accordionExample">
                                                <div class="accordion-body">
                                                    {{ section.description|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="lead">
                                {{ course.tags }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Author and Category card -->
                <div class="col-md-3">
                    <div class="card card-primary card-outline card-tabs">
                        <div class="card-header p-0 pt-1 border-bottom-0">
                            <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#course_details_tab_content" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill" href="#course_attachments_tab_content" role="tab" aria-controls="custom-tabs-three-profile" aria-selected="false">Pièces jointes ({{ course.medias | length }})</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="custom-tabs-three-tabContent">
                                <div class="tab-pane fade show active" id="course_details_tab_content" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                                    {% if course.author is defined and course.author is not null %}
                                        <p class="card-text"><strong>Auteur:</strong> {{ course.author.name }}</p>
                                    {% else %}
                                        <p class="card-text"><strong>Auteur:</strong> Not available</p>
                                    {% endif %}
                                    {% if course.category is defined and course.category is not null %}
                                        <p class="card-text"><strong>Categorie:</strong> {{ course.category.label }}</p>
                                    {% else %}
                                        <p class="card-text"><strong>Categorie:</strong> Not available</p>
                                    {% endif %}
                                    {% if course.url is defined and course.url is not null %}
                                        <a href="https://www.udemy.com/{{ course.url }}" target="_blank">Read in UDEMY</a>
                                    {% endif %}
                                </div>
                                <div class="tab-pane fade" id="course_attachments_tab_content" role="tabpanel" aria-labelledby="custom-tabs-three-profile-tab">
                                    {% if course.medias and course.medias | length > 0 %}
                                        <ul class="list-group">
                                            {% for media in course.medias %}
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <a href="{{ generate_cloud_url(media.fileName) }}" download="{{ media.fileName }}">
                                                        <i class="fas fa-file-download"></i> {{ media.fileName }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <p>Aucune pièce jointe disponible.</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <form id="summary-form" action="{{ path('app_generate_summary', {'id': course.id}) }}" method="post" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('generate_summary' ~ course.id) }}">
                        <i class="fa-solid fa-spinner"></i>
                        <a href="#" class="link-no-underline" onclick="document.getElementById('summary-form').submit(); return false;">
                            Générez Résumé avec AI
                        </a>
                    </form>
                    {% if summary is defined and summary is not empty %}
                        <div class="card mt-3">
                            <div class="card-header">
                                <h4>Résumé du cours</h4>
                            </div>
                            <div class="card-body">
                                <p>{{ summary }}</p>
                            </div>
                        </div>
                    {% else %}
                        <div id="spinner-summary" class="spinner-border text-primary" role="status" style="display: none;">
                            <span class="sr-only">Loading...</span>
                        </div>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block custom_css %}
    <style>
        .favorite {
            color: yellow;
        }
        .not-favorite {
            color: grey;
        }
        .spinner-border {
            margin-top: 1rem;
        }
        .link-no-underline {
    color: black; /* Couleur du lien en noir */
    text-decoration: none; /* Enlever le soulignement */
}

    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('favorite-toggle').addEventListener('click', function (e) {
            e.preventDefault();
            const isFavorite = document.querySelector('#favorite-toggle i').classList.contains('favorite');
            const url = isFavorite ? '{{ path('app_favorite_remove', {'id': course.id}) }}' : '{{ path('app_favorite_toggle', {'id': course.id}) }}';
            const spinner = document.getElementById('spinner');
            spinner.style.display = 'block';
            fetch(url, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json'
                },
            })
                .then(response => response.json())
                .then(data => {
                    spinner.style.display = 'none';
                    if (data.status === 'success') {
                        const icon = document.querySelector('#favorite-toggle i');
                        const button = document.getElementById('favorite-toggle');
                        if (isFavorite) {
                            icon.classList.remove('favorite');
                            icon.classList.add('not-favorite');
                            button.innerHTML = '<i class="fas fa-star not-favorite"></i>';
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                title: 'Favoris mis à jour',
                                body: 'Ce cours a été retiré des favoris avec succès!'
                            });
                        } else {
                            icon.classList.remove('not-favorite');
                            icon.classList.add('favorite');
                            button.innerHTML = '<i class="fas fa-star favorite"></i>';
                            $(document).Toasts('create', {
                                class: 'bg-success',
                                title: 'Favoris mis à jour',
                                body: 'Ce cours a été ajouté aux favoris avec succès!'
                            });
                        }
                    } else {
                        $(document).Toasts('create', {
                            class: 'bg-danger',
                            title: 'Erreur',
                            body: 'Une erreur est survenue lors de la mise à jour des favoris. Veuillez réessayer.'
                        });
                    }
                })
                .catch(error => {
                    spinner.style.display = 'none';
                    console.error('Error:', error);
                    $(document).Toasts('create', {
                        class: 'bg-danger',
                        title: 'Erreur',
                        body: 'Une erreur réseau est survenue. Veuillez vérifier votre connexion Internet.'
                    });
                });
        });

        document.getElementById('summary-form').addEventListener('submit', function (e) {
            const spinnerSummary = document.getElementById('spinner-summary');
            spinnerSummary.style.display = 'inline-block';
        });
    </script>
{% endblock %}
