{% extends 'site.html.twig' %}

{% block title %}{{ course.label }}{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <h2>{{ course.label }}</h2>
            <div class="row">
                <!-- Main course card -->
                <div class="col-md-9">
                    <div class="card d-flex align-items-start justify-content-start">
                        {% if video_url is defined and video_url is not empty %}
                            <video width="100%" height="400" controls>
                                <source src="{{ video_url }}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        {% else %}
                            <img class="card-img-top"
                                 src="{{ asset(random(['images/php_Elephant.jpg', 'images/php_Elephant_V2.jpg', 'images/php_Elephant_V3.jpg'])) }}"
                                 alt="image of the course"
                                 style="height: 20vh; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">

                            <p class="card-text">{{ course.description|raw }}</p>
                            <a href="{{ path('app_cours_ajout_section', {'id': course.id}) }}" class="btn btn-primary">Ajouter
                                section</a>
                        </div>
                    </div>
                </div>

                <!-- Author and Category card -->
                <div class="col-md-3">
                    <div class="card card-primary card-outline card-tabs">
                        <div class="card-header p-0 pt-1 border-bottom-0">
                            <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active"
                                       id="custom-tabs-three-home-tab"
                                       data-toggle="pill" href="#course_details_tab_content" role="tab"
                                       aria-controls="custom-tabs-three-home" aria-selected="true">Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill"
                                       href="#course_attachments_tab_content" role="tab"
                                       aria-controls="custom-tabs-three-profile" aria-selected="false">Pièces jointes</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="custom-tabs-three-tabContent">
                                <div class="tab-pane fade show active" id="course_details_tab_content" role="tabpanel"
                                     aria-labelledby="custom-tabs-three-home-tab">
                                    {% if author is defined and author is not null %}
                                        <p class="card-text"><strong>Auteur:</strong> {{ author.name }}</p>
                                    {% else %}
                                        <p class="card-text"><strong>Auteur:</strong> Not available</p>
                                    {% endif %}
                                    {% if category is defined and category is not null %}
                                        <p class="card-text"><strong>Categorie:</strong> {{ category.label }}</p>
                                    {% else %}
                                        <p class="card-text"><strong>Categorie:</strong> Not available</p>
                                    {% endif %}
                                </div>
                                <div class="tab-pane fade" id="course_attachments_tab_content" role="tabpanel"
                                     aria-labelledby="custom-tabs-three-profile-tab">

                                    <h3>Liste des pièces jointes</h3>

                                    {% if course.medias and course.medias | length > 0 %}
                                        <ul>
                                            {% for media in course.medias %}
                                                <li>{{ media.fileName }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="accordion" id="accordionExample" style="margin-top: 1rem;">
        {% for section in sections %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading{{ loop.index }}">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse{{ loop.index }}" aria-expanded="true"
                            aria-controls="collapse{{ loop.index }}">
                        <strong>{{ section.title }}</strong>
                    </button>
                </h2>
                <div id="collapse{{ loop.index }}" class="accordion-collapse collapse"
                     aria-labelledby="heading{{ loop.index }}"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{ section.description|raw }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
